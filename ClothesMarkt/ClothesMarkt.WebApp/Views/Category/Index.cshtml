@model List<CategoryViewModel>

<a class="btn btn-primary" asp-action="Create" asp-controller="Category">Yeni Kategori</a>

<table class="table table-striped table-hover">
    <tr class="text-danger fw-bolder">
        <td>#</td>
        <td>Ad</td>
        <td>İşlemler</td>

    </tr>

    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.RowNum</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-info" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-secondary" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id">Detay</a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>

            </tr>
        }
    }
</table>
