@using ClothesMarkt.Enums.OrtakEnums
@using ClothesMarkt.Enums.Shirt

@model ShirtViewModel

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">ÜRÜN EKLEME</h3>
					</div>
					<form asp-action="Create" enctype="multipart/form-data" id="accept-form">
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Name">@Html.DisplayNameFor(m => m.Name) </label>
								<input asp-for="Name" class="form-control" />
								<span asp-validation-for="Name" class="form-text text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Description">@Html.DisplayNameFor(m => m.Description) </label>
								<input asp-for="Description" class="form-control" />
								<span asp-validation-for="Description" class="form-text text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Category">@Html.DisplayNameFor(m => m.Category)</label>
								<select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
								<span asp-validation-for="CategoryId" class="form-text text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="RenkId" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.RenkId)</label>
								<select asp-for="RenkId" class="form-control" asp-items="@ViewBag.Renkler"></select>
								<span asp-validation-for="RenkId" class="form-text text-danger"></span>
							</div>

							<div class="form-group">
								<label asp-for="UnitPrice" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.UnitPrice)</label>
								<div class="input-group">
									<div class="input-group-prepend">
										<span class="input-group-text">$</span>
									</div>
									<input asp-for="UnitPrice" type="number" step="10" class="form-control" aria-label="Amount (to the nearest dollar)">
									<span asp-validation-for="UnitPrice"></span>
									<div class="input-group-append">
										<span class="input-group-text">.00</span>
									</div>
								</div>								
							</div>

							<div class="form-group">
								<label asp-for="CepTipi" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.CepTipi)</label>
								<select asp-for="CepTipi" class="form-control" asp-items="Html.GetEnumSelectList<CepTipi>()">
									<option selected="selected" value="-1">Lütfen Cep Tipi Seçiniz</option>
								</select>
							</div>

							<div class="form-group">
								<label asp-for="KolBoyu" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.KolBoyu)</label>
								<select asp-for="KolBoyu" class="form-control" asp-items="Html.GetEnumSelectList<KolBoyu>()">
									<option selected="selected" value="-1">Lütfen KolBoyu Seçiniz</option>
								</select>
							</div>

							<div class="form-group">
								<label asp-for="KolTipi" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.KolTipi)</label>
								<select asp-for="KolTipi" class="form-control" asp-items="Html.GetEnumSelectList<KolTipi>()">
									<option selected="selected" value="">Lütfen KolTipi Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ProductSize" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ProductSize)</label>
								<select asp-for="ProductSize" class="form-control" asp-items="Html.GetEnumSelectList<ProductSize>()">
									<option selected="selected" value="">Lütfen Size Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtBaski" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtBaski)</label>
								<select asp-for="ShirtBaski" class="form-control" asp-items="Html.GetEnumSelectList<ShirtBaski>()">
									<option selected="selected" value="">Lütfen ShirtBaski Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtDesen" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtDesen)</label>
								<select asp-for="ShirtDesen" class="form-control" asp-items="Html.GetEnumSelectList<ShirtDesen>()">
									<option selected="selected" value="">Lütfen ShirtDesen Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtDokumaTipi" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtDokumaTipi)</label>
								<select asp-for="ShirtDokumaTipi" class="form-control" asp-items="Html.GetEnumSelectList<ShirtDokumaTipi>()">
									<option selected="selected" value="">Lütfen ShirtDokumaTipi Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtKalip" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtKalip)</label>
								<select asp-for="ShirtKalip" class="form-control" asp-items="Html.GetEnumSelectList<ShirtKalip>()">
									<option selected="selected" value="">Lütfen ShirtKalip Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtKolTipi" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtKolTipi)</label>
								<select asp-for="ShirtKolTipi" class="form-control" asp-items="Html.GetEnumSelectList<ShirtKolTipi>()">
									<option selected="selected" value="">Lütfen ShirtKolTipi Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtKumasTipi" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtKumasTipi)</label>
								<select asp-for="ShirtKumasTipi" class="form-control" asp-items="Html.GetEnumSelectList<ShirtKumasTipi>()">
									<option selected="selected" value="">Lütfen ShirtKumasTipi Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtMateryal" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtMateryal)</label>
								<select asp-for="ShirtMateryal" class="form-control" asp-items="Html.GetEnumSelectList<ShirtMateryal>()">
									<option selected="selected" value="">Lütfen ShirtMateryal Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ShirtYakaTipi" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ShirtYakaTipi)</label>
								<select asp-for="ShirtYakaTipi" class="form-control" asp-items="Html.GetEnumSelectList<ShirtYakaTipi>()">
									<option selected="selected" value="">Lütfen ShirtYakaTipi Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="PictureFormFile">@Html.DisplayNameFor(m => m.PictureFormFile) </label>
								<input asp-for="PictureFormFile" type="file" class="form-control" />
								<span asp-validation-for="PictureFormFile" class="form-text text-danger"></span>
							</div>
						</div>
						<div class="card-footer">
							<button type="submit" class="btn btn-primary">EKLE</button>
						</div>
						
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@Html.Partial("_ValidationScriptsPartial")
}